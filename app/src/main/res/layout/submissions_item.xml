<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/border_3"
    android:id="@+id/submissions_view"
    android:elevation="5dp"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="3dp"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_submissions"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="1534C"
            android:textSize="10sp"
            android:paddingHorizontal="3dp"
            android:paddingVertical="4dp"
            />

        <TextView
            android:id="@+id/time_submissions"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="12 Sept, 2021 03:20 pm"
            android:textSize="10sp"
            android:paddingHorizontal="3dp"
            android:paddingVertical="4dp"
            />
        <TextView
            android:id="@+id/problem_name_submissions"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Momor and XOR arrays"
            android:textSize="10sp"
            android:paddingHorizontal="3dp"
            android:paddingVertical="4dp"
            />

        <TextView
            android:id="@+id/verdict_submissions"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="wrong_answer"
            android:textSize="10sp"
            android:paddingHorizontal="3dp"
            android:paddingVertical="4dp"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>
