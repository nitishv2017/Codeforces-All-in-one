<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#EBF6FA"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#EBF6FA"
        android:id="@+id/action_bar_additional"
        android:layout_height="?actionBarSize">
        <ImageView
            android:id="@+id/back_submissions"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/back_btn"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:background="#EBF6FA"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="?actionBarSize"
            android:textSize="24sp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/primary_text"
            android:id="@+id/heading_submissions"
            android:fontFamily="@font/berlin"/>

    </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/submissions_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_back"
        android:divider="@null"
        tools:context=".Sneak_submissions">


    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
